<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirtApp.LoginPage">
    <ContentPage.Content>
        <StackLayout Spacing="5" Padding="20" >        
            <Image 
                Source="Metro_SD.jpg" Margin="50"/>
            <Entry x:Name="userEntry" FontAttributes="Italic" Keyboard="Text" Placeholder="Username" PlaceholderColor="Gray" TextColor="Black"  />
            <Entry x:Name="passwordEntry" IsPassword="True" FontAttributes="Italic" Placeholder="Password" PlaceholderColor="Gray" TextColor="Black" />
            <Button Text="Login" Clicked="OnClicked" TextColor="White" BackgroundColor="Green" FontSize="Large" FontAttributes="Bold" />
            <Label Text="Forget password?" HorizontalOptions="Center" FontAttributes="Bold"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>